<div class="asw-form">
    <%= form_tag do %>
      <fieldset>
        <legend>Login</legend>

        <div>
          <label for="name">Login Name:</label>
          <%= text_field_tag :login_name, params[:login_name] %>
        </div>

        <div>
          <label for="password">Password:</label>
          <%= password_field_tag :password, params[:password] %>
        </div>

        <div>
          <%= submit_tag "Login" %>
        </div>
      </fieldset>
    <% end %>
</div>