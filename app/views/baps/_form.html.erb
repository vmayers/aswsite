<script>
	$(function() {
		$( "#bap_date_of_spawn" ).datepicker({ dateFormat: 'yy-mm-dd'});
		$( "#bap_report_date" ).datepicker({ dateFormat: 'yy-mm-dd'});
		$( "#bap_date_of_hatch" ).datepicker({ dateFormat: 'yy-mm-dd'});
	});
</script>

<%= form_for(@bap) do |f| %>
  <% if @bap.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bap.errors.count, "error") %> prohibited this bap from being saved:</h2>

      <ul>
      <% @bap.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <legend>Species Info</legend>
    <div class="leftside"> 
      <div class="field">
        <%= f.label :latin_name %>
        <%= f.text_field :latin_name, :size => 45 %>
      </div>
      <div class="field">
        <%= f.label :date_of_spawn %>
        <%= f.text_field :date_of_spawn %>
      </div>
      <div class="field">
        <%= f.label :date_of_hatch %>
        <%= f.text_field :date_of_hatch %>
      </div>
      <div class="field">
        <%= f.label :number_of_eggs %>
        <%= f.text_field :number_of_eggs, :size => 4 %>
      </div>
      <div class="field">
        <%= f.label :publication_cited %>
        <%= f.text_field :publication_cited, :size => 45 %>
      </div>
      <div class="field">
        <%= f.label :obtained_from %>
        <%= f.text_field :obtained_from, :size => 45 %>
      </div>
    </div>
    
    <div class="rightside"> 
      <div class="field">
        <%= f.label :report_date %>
        <%= f.text_field :report_date %>
      </div>
      <div class="field">
        <%= f.label :common_name %>
        <%= f.text_field :common_name, :size => 45 %>
      </div>
      <div class="field">
        <%= f.label :spawn_site %>
        <%= f.text_field :spawn_site %>
      </div>
      <div class="field">
        <%= f.label :spawn_type %>
        <%= f.text_field :spawn_type %>
      </div>
      <div class="field">
        <%= f.label :number_of_fry %>
        <%= f.text_field :number_of_fry, :size => 4 %>
      </div>
    </div>
  </fieldset>
  <br/>
  <fieldset>
    <legend>Spawning Conditions</legend>
    <div class="leftside">
      <div class="field">
        <label>Aquarium Size (inches):</label>
        <%= f.text_field :aquarium_length, :size => 4 %>&nbsp;L
        <%= f.text_field :aquarium_width, :size => 4 %>&nbsp;W
        <%= f.text_field :aquarium_height, :size => 4 %>&nbsp;H
      </div>
      <div class="field">
     		<%= f.label :temperature %>	
     		<%= f.text_field :temperature %>	
      </div>
      <div class="field">
      	<%= f.label :lighting_type %>	
     		<%= f.text_field :lighting_type %>
     		&nbsp;Watts
     		<%= f.text_field :lighting_watts, :size => 4 %>
      </div>
      <div class="field">
      	<%= f.label :spawn_planned %>	
     		<%= f.check_box :spawn_planned, :checked_value => "true", :unchecked_value => "false" %> &nbsp; if YES please describe in the comment box    
      </div>
    </div>
    <div class="rightside">
      <div class="field">
        pH &nbsp;<%= f.text_field :ph, :size => 4 %> 
        DH &nbsp;<%= f.text_field :dh, :size => 4 %> 
      </div>

      <div class="field">
      	<%= f.label :filter_type %>	
     		<%= f.text_field :filter_type %>
      </div>
    </div>
    <div class="clear"></div>
    <hr />
    <div class="field">
    	<%= f.label :food_for_parents %>	
     	<%= f.text_field :food_for_parents, :size => 45 %>
    </div>

    <div class="field">
    	<%= f.label :food_for_fry %>	
     	<%= f.text_field :food_for_fry, :size => 45 %>
    </div>
   
    
  </fieldset>
  <br />
  <fieldset>
    <legend>Comments</legend>
    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment, :size => "80x15" %>
    </div>
    <div class="field">
      <%= f.label :submitted %>
      <%= f.check_box :submitted, :checked_value => "true", :unchecked_value => "false" %>
    </div>
  </fieldset>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
